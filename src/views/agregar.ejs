<!-- Título de la página -->
<h2>Agregar País</h2>

<% 
<!--
  // Si hay errores de validación (enviados desde el backend),
  // se muestran en una lista con texto rojo-->
  if (typeof errores !== 'undefined') { 
%>
  <ul style="color:red;">
    <% errores.forEach(error => { %>
      <li><%= error.msg %></li> <!-- Mostramos cada mensaje de error individual -->
    <% }) %>
  </ul>
<% } %>

<!-- Formulario que envía los datos al servidor para crear un nuevo país -->
<form action="/paises/agregar" method="POST">
  
  <!-- Campo: Nombre Oficial -->
  <label for="nombre">Nombre Oficial (español):</label>
  <input id="nombre" name="name.spa.official" type="text" required>
  
  <!-- Campo: Capital -->
  <label for="capital">Capital (separadas por coma):</label>
  <input id="capital" name="capital" type="text" required>
  
  <!-- Campo: Fronteras -->
  <label for="fronteras">Fronteras (códigos de 3 letras, separados por coma):</label>
  <input id="fronteras" name="borders" type="text" required>
  
  <!-- Campo: Área -->
  <label for="area">Área (km²):</label>
  <input id="area" name="area" type="number" required>
  
  <!-- Campo: Población -->
  <label for="poblacion">Población:</label>
  <input id="poblacion" name="population" type="number" required>
  
  <!-- Campo: Gini (Opcional) -->
  <label for="gini">Gini:</label>
  <input id="gini" name="gini" type="number" step="0.01">
  
  <!-- Campo: Zonas Horarias -->
  <label for="zonas">Zonas horarias (separadas por coma):</label>
  <input id="zonas" name="timezones" type="text">
  
  <!-- Botón de envío -->
  <button type="submit">Guardar</button>
</form>

<!-- Incluimos el pie de página común 
<%- include('partials/footer') %>
-->