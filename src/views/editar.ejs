<!-- Título de la sección -->
<h2>Editar País</h2>

<% 
  // Si se enviaron errores de validación desde el servidor, los mostramos como lista
  if (typeof errores !== 'undefined') { 
%>
  <ul style="color:red;">
    <% errores.forEach(error => { %> <!-- Recorremos y mostramos cada error -->
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Formulario para editar los datos de un país -->
<form action="/paises/editar/<%= pais._id %>" method="POST">
  
  <!-- Campo: Nombre Oficial -->
  <label for="nombre">Nombre Oficial (español):</label>
  <input id="nombre" name="name.spa.official" type="text" value="<%= pais.name?.spa?.official || '' %>" required>
  
  <!-- Campo: Capital -->
  <label for="capital">Capital (separadas por coma):</label>
  <input id="capital" name="capital" type="text" value="<%= (pais.capital || []).join(', ') %>" required>
  
  <!-- Campo: Fronteras -->
  <label for="fronteras">Fronteras (códigos de 3 letras, separados por coma):</label>
  <input id="fronteras" name="borders" type="text" value="<%= (pais.borders || []).join(', ') %>" required>
  
  <!-- Campo: Área -->
  <label for="area">Área (km²):</label>
  <input id="area" name="area" type="number" value="<%= pais.area || 0 %>" required>
  
  <!-- Campo: Población -->
  <label for="poblacion">Población:</label>
  <input id="poblacion" name="population" type="number" value="<%= pais.population || 0 %>" required>
  
  <!-- Campo: Gini (Opcional) -->
  <label for="gini">Gini:</label>
  <input id="gini" name="gini" type="number" step="0.01" value="<%= typeof pais.gini === 'number' ? pais.gini : '' %>">
  
  <!-- Campo: Zonas Horarias -->
  <label for="zonas">Zonas horarias (separadas por coma):</label>
  <input id="zonas" name="timezones" type="text" value="<%= (pais.timezones || []).join(', ') %>">
  
  <!-- Botón de envío -->
  <button type="submit">Actualizar</button>
</form>

<!-- Incluimos el pie de página desde los parciales 
<%- include('partials/footer') %>
-->